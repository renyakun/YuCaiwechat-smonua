<!--pages/tidings/tidings/tidings.wxml-->

<scroll-view scroll-y class=" padding-bottom margin-bottom-xl">

  <!-- cuIcon-infofill  -->
  <view class="cu-list menu-avatar">
    <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{newslist}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
      <view class="cu-avatar round " style="background-image:url({{item.img}});"></view>
      <view class="content" style="width:60%">
        <view class="text-black text-df text-bold">{{item.con}}</view>
        <view class="text-gray text-sm" style=" display: {{item.badge==0?'':'none'}}">
          <text class="cuIcon-{{item.icon}} text-red"></text>{{item.tit}}</view>
        <view class="text-gray text-sm" style=" display: {{item.badge!=0?'':'none'}}">
          <i-notice-bar icon="systemprompt" loop class=" margin-bottom-lg">
            {{item.notice}}
          </i-notice-bar>
        </view>
      </view>
      <view class="action" style="width:11vh;display: {{item.badge!=0?'':'none'}}">
        <view class="text-grey text-df">{{item.timer}}</view>
        <view class="cu-tag round bg-gradual-blue sm shadow shadow-lg">{{item.badge}}</view>
      </view>
      <!-- <view class="move">
        <view class="bg-grey">查看</view>
        <view class="bg-red">清空消息</view>
      </view> -->
      <view class="move bg-white ">

        <view class="padding-xs">
          <view class="cu-tag bg-gradual-blue round shadow shadow-lg" bindtap="cussjump">查看</view>
        </view>
        <view class="padding-xs">
          <view class="cu-tag bg-grey round" bindtap="emptytap">清空消息</view>
        </view>

      </view>
    </view>
  </view>

</scroll-view>