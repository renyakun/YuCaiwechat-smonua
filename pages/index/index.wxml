<!--index.wxml-->
<cu-custom  isBack="{{false}}">
  <view slot="content" class="margin-top-xs">首页</view>
</cu-custom>
<scroll-view scroll-y class="scrollPage" scrollTop="{{scrollTop}}">

  <view class="cu-bar search  {{fixedflag?'fixed':''}} indigo shadow-blur" style="top:10vh;">
    <navigator url="/pages/search/search/search" class="search-form round">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="输入搜索的关键词" confirm-type="search"></input>
    </navigator>
  </view>

  <view class="margin margin-left-sm margin-right-sm radius bgshadow bg-black bgwhite" style="margin-top:10vh;">
    <view class="cu-list grid col-4 {{gridBorder?'':'no-border'}}">
      <view class="cu-item" wx:for="{{iconList}}" wx:key wx:if="{{index<7}}" bindtap="sendjump" data-target="{{item}}">
        <view class="cuIcon-{{item.icon}}" style="color:{{item.color}}">
          <view class="cu-tag badge" wx:if="{{item.badge!=0}}" style="color:white">
            <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
          </view>
        </view>
        <text>{{item.title}}</text>
      </view>
    </view>
  </view>

  <view class="cu-bar indigo solid-bottom {{fixedflag?'':'fixed'}}  shadow-blur" style="top:{{CustomBar}}px;">
    <view class='action'>
      <scroll-view scroll-x class=" nav text-center">
        <view class="cu-item {{item.id==TabCur?'text-white cur':''}}" style="color:white" wx:for="{{navlist}}" wx:key bindtap="tabSelect" data-id="{{item.id}}">
          {{item.nav}}
        </view>
      </scroll-view>
    </view>
    <view class='action' style="color:white" bindtap="showRegion">
      <text>{{munitem}}</text>
      <text class="cuIcon-{{regionicon}}"></text>
    </view>
  </view>

  <block wx:if="{{Modalflag}}" class="">

    <view class="bg-white" style="" wx:if="{{demandflag}}" style="height:800rpx;width:100%">
      <image src="/images/rhomb-white.gif" mode="aspectFit" class="gif-white response"></image>
    </view>
    <!-- wx:for="{{citylist}}" wx:for-item="cityitem" wx:key  wx:for="{{item.label}}"  wx:key-->
    <block wx:else>
      <view class="cu-card article no-card  margin-top-sm   margin-left-sm margin-right-sm padding-top-xs padding-bottom-xs radius  bgwhite bgshadow" wx:for="{{demand}}" wx:key bindtap="Seedels" data-target="{{item}}">
        <view class="cu-item">
          <view class="title">
            <view class="text-cut">{{item.jobName}}</view>
          </view>
          <view class="content">
            <view class="bg-white" style="width:55%">
              <view class="margin-top-xs">{{item.jobType}} | {{item.ageRequire}}岁</view>
              <view class="margin-top-sm text-cut" style="width:20vh">
                <text class="">{{item.city}}</text>
              </view>
              <view class="cu-tag bggreen round margin-top-lg" style="color:white">{{item.releaseType}}认证</view>
            </view>
            <view class=" margin-left bg-white" style="width:45%">
              <view class="margin-top-xs flex justify-end">￥{{item.salary}}元/月</view>
              <view class="flex justify-end margin-top-sm">{{item.createTime}}</view>
              <view class="flex justify-end align-end margin-top-xl">
                <text bindtap="Seedels" data-target="{{item}}">查看详情</text>
                <text class="cuIcon-right"></text>
              </view>
            </view>

          </view>

          <!-- <view class="flex justify-center align-end margin-top-xs">
            <text>查看全部服务和案例</text>
            <text class="cuIcon-right"></text>
          </view> -->
        </view>

      </view>

      <view class="margin-top-xl" wx:if="{{loadflag}}">
        <i-load-more tip="{{tiptxt}}" loading="{{ false }}" />
      </view> 

      <view class="padding-top-xl bgwhite flex justify-center"  wx:else style="width:100%">
        <image src="/images/nodata.jpg" mode="aspectFit"></image>
      </view>

    </block>

  </block>

  <block wx:if="{{!Modalflag}}" class="">

    <view class="" style="">
      <view class=" bgwhite" style="width:100vh;height:100vh;">
        <view class="bg-gray margin-left" style="z-index:999;">
          <picker-view mode="region" indicator-style="height: 8vh;" style=" height: 40vh;" value="{{value}}" bindchange="bindChange">
            <picker-view-column style="width:30vh;">
              <view wx:for="{{provinces}}" wx:key style="line-height: 8vh;" data-target="{{item}}" bindtap="proChange">{{item}}</view>
            </picker-view-column>
            <picker-view-column style="display:{{provinceflag? 'block':'none'}}">
              <view wx:for="{{municipal}}" wx:key style="line-height: 8vh;" bindtap="munChange" data-target="{{item}}">{{item}}</view>
            </picker-view-column>
          </picker-view>
        </view>

        <view class="padding-xl" style="height:10vh;z-index:-999;">

        </view>
      </view>
    </view>
  </block>

</scroll-view>