<!--pages/invitation/evaluate/evaluate.wxml-->
<cu-custom isCustom="{{true}}" isBack="{{false}}">
  <view slot="backText">返回</view>
  <view slot="content" class="margin-top-xs">评价</view>
</cu-custom>

<view class="" style=" ">

  <form bindsubmit='formSubmit'>
    <view class="cu-bar bg-white">
      <view class="action">
        <view class="title">评价内容</view>
      </view>
    </view>

   <view class="bg-white cu-card no-card  shadow">
      <view class="cu-form-group align-center margin-xs bg-gray cu-card no-card" style="position: relative">
        <view class="title">评价星级</view>
        <view class="flex align-end  margin-bottom-xs " style="width:76%;">
          <i-rate bind:change="onChange" value="{{star}}" size="32">
          </i-rate>
        </view>
      </view>
    </view>

    <view class="bg-white cu-card no-card  shadow">
      <view class="cu-form-group align-start margin-xs bg-gray cu-card no-card" style=" height:45vh;">
        <view class="flex align-end  margin-bottom-xs " style="width:100%;height:45vh;">
          <textarea class="" maxlength="500" name="message" bindinput="textareaBInput" placeholder="请输入内容" style="height:40vh;"></textarea>
          <view class="" style="position: absolute;right:25rpx">
            <text>{{txtput}}</text>/500</view>
        </view>
      </view>
    </view>
    
 

    <view class="padding margin-bottom flex justify-center">
      <button class="cu-btn bg-gradual-blue shadow-blur margin-right" formType="submit" style="width:20vh">发布</button>
      <button class="cu-btn bg-gradual-blue shadow-blur " formType="reset" style="width:20vh">重置</button>
    </view>

  </form>

</view>