<!--pages/tidings/reply/reply.wxml-->
<view class="" style=" ">

  <form bindsubmit='formSubmit'>
    <view class="bg-white cu-card no-card  shadow">
      <view class="cu-form-group align-start margin-xs bg-gray cu-card no-card" style=" height:45vh;">
        <view class="flex align-end  margin-bottom-xs " style="width:100%;height:45vh;">
          <textarea class="" maxlength="500" name="replyMessage" bindinput="textareaBInput" placeholder="请输入回复内容" style="height:40vh;"></textarea>
          <view class="" style="position: absolute;right:25rpx">
            <text>{{txtput}}</text>/500</view>
        </view>
      </view>
    </view>

    <view class="padding margin-bottom flex justify-center">
      <button class="cu-btn bg-gradual-blue shadow-blur margin-right" formType="submit" style="width:20vh">回复</button>
      <button class="cu-btn bg-gradual-blue shadow-blur " formType="reset" style="width:20vh">重置</button>
    </view>

  </form>

</view>
